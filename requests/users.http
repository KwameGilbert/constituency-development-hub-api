#         "agent": {
#             "id": 1,
#             "agent_code": "AGT-2025-0001",
#             ...
#         },
#         "generated_password": "Zr7!oP4qS%"
#     }
# }

###

### Update agent
PUT {{baseUrl}}/admin/agents/1
Content-Type: application/json
Authorization: Bearer {{authToken}}

{
    "assigned_communities": ["Village A", "Village B", "Town C", "Town D"],
    "status": "active"
}

